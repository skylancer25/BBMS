<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BBMS_1</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BBMS_1.styles.css" asp-append-version="true" />

    <style>
        /* Color Palette */
        :root {
            --primary-color: #1E3A8A; /* Deep Blue */
            --secondary-color: #2563EB; /* Bright Blue */
            --text-color: #ffffff;
            --hover-color: #3B82F6;
            --background-color: #F3F4F6;
        }

        /* Full-page layout */
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
            background-color: var(--background-color);
        }

        /* Navbar Styling - Reduced Height */
        .navbar-custom {
            background: var(--primary-color);
            padding: 8px 10px; /* Reduced padding */
            border-bottom: 2px solid var(--secondary-color);
            text-align: center;
        }

        .navbar-brand {
            font-size: 1.7rem; /* Slightly larger */
            font-weight: bold;
            color: var(--text-color) !important;
            width: 100%;
            text-align: center;
        }

        /* Main Content - Adjusted for Perfect Fit */
        .main-content {
            flex-grow: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        /* Footer - Reduced Height */
        .footer-custom {
            background: var(--primary-color);
            color: var(--text-color);
            padding: 10px 0; /* Reduced padding */
            text-align: center;
            font-size: 0.9rem;
        }

            .footer-custom a {
                color: var(--hover-color);
                text-decoration: none;
            }

                .footer-custom a:hover {
                    color: var(--text-color);
                }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container">
                <a class="navbar-brand">Blood Bank Management System</a>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer-custom">
        <div class="container">
            &copy; 2025 - BBMS | <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.9/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
