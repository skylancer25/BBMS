@model BBMS_1.Models.PatientViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Patient Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .header {
            background: #1E3A8A;
            color: white;
            padding: 15px;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="header">Welcome, @Model.Patient.patient_name</div>

        <div class="row mt-4">
            <!-- Patient Details -->
            <div class="col-md-4">
                <div class="card p-3">
                    <h5 class="text-primary">Your Details</h5>
                    <p><strong>Name:</strong> @Model.Patient.patient_name</p>
                    <p><strong>Location:</strong> @Model.Patient.patient_address</p>
                    <p><strong>Blood Group:</strong> @Model.Patient.blood_grp</p>
                </div>
            </div>

            <!-- Nearby Donors -->
            <div class="col-md-8">
                <div class="card p-3">
                    <h5 class="text-danger">Nearby Donors</h5>
                    @if (Model.NearbyDonors.Any())
                    {
                        <ul class="list-group">
                            @foreach (var donor in Model.NearbyDonors)
                            {
                                <li class="list-group-item">
                                    <strong>@donor.patient_name</strong> - @donor.blood_grp
                                    <span class="badge bg-success float-end">Available</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No donors found in your area.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
